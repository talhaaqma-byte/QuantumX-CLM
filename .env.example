# QuantumX-CLM Backend (FastAPI)

# App
CLM_ENVIRONMENT=development
CLM_LOG_LEVEL=INFO

# If true, /health will attempt to connect to the DB(s)
CLM_HEALTHCHECK_DB=false

# Databases (dual DB architecture)
# Use async URLs for the app. Example:
# postgresql+asyncpg://clm_app:password@localhost:5432/clm_core_db
CLM_CORE_DB_DSN=
CLM_SECURE_DB_DSN=

# TLS/SSL (recommended for production)
CLM_DB_SSL_REQUIRED=false
CLM_DB_SSL_CA_FILE=
CLM_DB_SSL_CERT_FILE=
CLM_DB_SSL_KEY_FILE=

# Connection pooling
CLM_DB_POOL_SIZE=5
CLM_DB_MAX_OVERFLOW=10
CLM_DB_POOL_TIMEOUT_S=30

# JWT Configuration
# Secret key for signing JWT tokens (MUST be changed in production!)
CLM_JWT_SECRET_KEY=dev-secret-key-change-in-production
# JWT algorithm (HS256, HS384, HS512, RS256, etc.)
CLM_JWT_ALGORITHM=HS256
# Access token expiration time in minutes
CLM_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
# Refresh token expiration time in days
CLM_JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
